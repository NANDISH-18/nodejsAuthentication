<link rel="stylesheet" href="/css/signUp.css">
<form action="/signup" method="POST" class="signupContainer">
    <h1 class="signupHeading">Signup</h1>
    <div class="inputField">
        <input type="text" name="name" class="inputFieldi" placeholder="name">
    </div>
    <div class="inputField">
        <input type="email" name="email" class="inputFieldi" placeholder="email">
    </div>
    <div class="inputField">
        <input type="password" name="password" class="inputFieldi" placeholder="password">
    </div>
    <div class="inputField">
        <input type="password" name="confirm_password" class="inputFieldi" placeholder="confirm_password">
    </div>

    <div class="btncontainer">
        <button type="submit" class="btn">Signup</button>
    </div>
    <div>
        <p>Already have an account <a href="/login">Login</a></p>
    </div>

    <div class="hr">
        <span class="span1">__________________</span>
        <span class="spanor">Or</span>
        <span class="span2">__________________</span>
    </div>

    <div class="btncontainer">
        <div class="gbtn">
            <img class="gimg" src="https://img.icons8.com/color/1x/google-logo.png" alt="">
            <a class="glink" href="/auth/google">Login with google</a>
        </div>

    </div>

</form>